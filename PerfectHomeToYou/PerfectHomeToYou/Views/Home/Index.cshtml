@model IndexViewModel

@{
    ViewData["Title"] = "Welcome!";
}

@{
    var apartments = Model.Apartments;

    var firstApartment = apartments.Any()
        ? apartments[0] : null;

    var secondApartment = apartments.Count > 1
        ? apartments[1] : null;

    var thirdApartment = apartments.Count > 2
        ? apartments[2] : null;
}

@if (!apartments.Any())
{
    <div class="jumbotron">
        <h1 class="display-4">Welcome to the best place for your perfect home!</h1>
        <p class="lead">There are no apartments in the system currently available so why don't you just add one?</p>
        <hr class="my-4">
        <p class="lead">
            <a asp-controller="Apartments" asp-action="Add" class="btn btn-primary btn-lg" role="button">Add Apartment</a>
        </p>
    </div>
}

<div class="mb-5"></div>

<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
        @if (firstApartment != null)
        {
            <div class="carousel-item active">
                <img class="d-block w-100" src="@firstApartment.ImageUrl" alt="@firstApartment.Price @firstApartment.RentOrSell">
                <div class="carousel-caption d-none d-md-block">
                    <h5><a class="btn btn-primary" asp-controller="Apartments" asp-action="Details" asp-route-id="@firstApartment.Id">@firstApartment.City  @firstApartment.Price @firstApartment.RentOrSell</a></h5>
                </div>
            </div>
        }
        @if (secondApartment != null)
        {
            <div class="carousel-item active">
                <img class="d-block w-100" src="@secondApartment.ImageUrl" alt="@secondApartment.Price @secondApartment.RentOrSell">
                <div class="carousel-caption d-none d-md-block">
                    <h5><a class="btn btn-primary" asp-controller="Apartments" asp-action="Details" asp-route-id="@secondApartment.Id">@secondApartment.City  @secondApartment.Price @secondApartment.RentOrSell</a></h5>
                </div>
            </div>
        }
        @if (thirdApartment != null)
        {
            <div class="carousel-item active">
                <img class="d-block w-100" src="@thirdApartment.ImageUrl" alt="@thirdApartment.Price @thirdApartment.RentOrSell">
                <div class="carousel-caption d-none d-md-block">
                    <h5><a class="btn btn-primary" asp-controller="Apartments" asp-action="Details" asp-route-id="@thirdApartment.Id">@thirdApartment.City  @thirdApartment.Price @thirdApartment.RentOrSell</a></h5>
                </div>
            </div>
        }
    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="mb-5"></div>

@if (User.Identity.IsAuthenticated)
{
    <div class="jumbotron">
        <div class="row">
            <h2 class="col-md-6 text-center">
                @Model.TotalApartments Total Apartments
            </h2>
            <h2 class="col-md-6 text-center">
                @Model.TotalUsers Total Users
            </h2>
        </div>
    </div>
}